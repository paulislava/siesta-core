  "version": "0.2.0",
  "configurations": [
  {
    "name": "Docker: Attach to Node",
    "type": "node",
    "request": "attach",
    "port": 9229,
    "address": "localhost",
    "localRoot": "${workspaceFolder}/packages/backend",
    "remoteRoot": "/app/packages/backend",
    "protocol": "inspector"
  },
  {
    "name": "Attach to Chrome",
    "port": 9222,
    "request": "attach",
    "type": "chrome",
    "webRoot": "${workspaceFolder}/frontend"
  }
  ]
}
